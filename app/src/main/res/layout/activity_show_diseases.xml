<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDiseases">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/belowicin"
            android:layout_marginTop="@dimen/text_size"
            android:layout_centerVertical="true"
            lottie_autoPlay="true"
            lottie_colorFilter="@color/colorAccent"
            lottie_fileName="patient_successfully_added.json"
            lottie_loop="true"/>
        <TextView
            android:id="@+id/belowicin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading_size"
            android:text="Tebrikler Öldünüz!"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>